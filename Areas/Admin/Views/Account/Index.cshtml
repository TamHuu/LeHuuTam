@model IEnumerable<LeHuuTam.Models.Users>

@{
    ViewData["Title"] = "Account";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h2 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h2>
        <div class="arrow">
            <button class="btn btn-link" id="toggleButton" aria-expanded="false">
                <i class="fas fa-plus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <table id="table" class="table table-bordered table-hover">
            <thead>
                <tr style="text-align:center">
                    <th>STT</th>
                    <th>Tên</th>
                    <th>Mật khẩu</th>
                    <th>Email</th>
                    <th>Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int index = 1;
                }
                @foreach (var account in Model)
                {
                    <tr>
                        <td style="text-align:center">@index</td>
                        <td>@account.UserName</td>
                        <td>@account.Password</td>
                        <td>@account.Email</td>
                        <td style="text-align:center">
                            <button data-id="@account.Id" class="btn btn-info btn-sm btnXem" data-toggle="modal" data-target="#model">Xem</button>
                            <button data-id="@account.Id" class="btn btn-warning btn-sm btnSua" data-toggle="modal" data-target="#model">Sửa</button>
                            <button data-id="@account.Id" class="btn btn-danger btn-sm btnXoa">Xóa</button>
                        </td>

                    </tr>
                    index++;
                }
            </tbody>
        </table>
    </div>

   

    <!-- Modal -->
    <div class="modal fade" id="model" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Tiêu đề Modal</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Đây là nội dung của popup. Bạn có thể thêm bất kỳ nội dung nào ở đây, bao gồm văn bản, hình ảnh, form, v.v.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-primary">Lưu thay đổi</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#table').DataTable({
                searching: true,
                paging: true,
                ordering: true,
                columnDefs: [
                    { targets: 0, width: '20px', className: 'text-center' },
                    { targets: [1, 2, 3,4], width: '150px', className: 'text-center' } 
                ]
            });

            // Xem
            $(document).on('click', '.btnXem', function () {
                const id = $(this).data('id');
                $('#model .modal-title').text("Xem Tài khoản"); 
                $('#model .modal-body').text(`Thông tin tài khoản ID: ${id}`); 
            });


            // Sửa
            $(document).on('click', '.btnSua', function () {
                const id = $(this).data('id');
                $('#model .modal-title').text("Sửa Tài khoản");
                $('#model .modal-body').text(`Thông tin tài khoản ID: ${id}`);
            });

            // Xóa
            $(document).on('click', '.btnXoa', function () {
                const id = $(this).data('id');
                $('#model .modal-title').text("Xoá Tài khoản");
                if (confirm(`Bạn có chắc chắn muốn xóa tài khoản ID: ${id}?`)) {
                    alert(`Đã xóa tài khoản ID: ${id}`);
                }
            });
        });
    </script>
}
